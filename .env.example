# ============================================================================
# Gateway API Environment Configuration
# ============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# ----------------------------------------------------------------------------
# HMAC Security
# ----------------------------------------------------------------------------

# HMAC_SECRET - Used to verify request signatures from ChatGPT
# REQUIRED: 32+ character hexadecimal string for cryptographic security
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
HMAC_SECRET=your_32_char_hex_secret_here

# ----------------------------------------------------------------------------
# Brand Routing - Gateway Keys
# ----------------------------------------------------------------------------
# These keys are included in the x-gateway-key header to route requests
# to the correct business tenant (DB = Design Builders, CI = Creative Interiors)

# GATEWAY_KEY_DB - Gateway key for Design Builders tenant
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
GATEWAY_KEY_DB=design_builders_gateway_key_here

# GATEWAY_KEY_CI - Gateway key for Creative Interiors tenant
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
GATEWAY_KEY_CI=creative_interiors_gateway_key_here

# ----------------------------------------------------------------------------
# JobTread API Keys
# ----------------------------------------------------------------------------
# Get these from JobTread's API settings for each tenant
# These are the "grant keys" that authenticate API requests to JobTread

# JT_GRANT_KEY_DB - JobTread grant key for Design Builders tenant
JT_GRANT_KEY_DB=

# JT_GRANT_KEY_CI - JobTread grant key for Creative Interiors tenant
JT_GRANT_KEY_CI=

# ----------------------------------------------------------------------------
# Make.com Integration
# ----------------------------------------------------------------------------

# MAKE_WEBHOOK_PO - Make.com webhook URL for purchase order creation
# Get this from your Make.com scenario settings
MAKE_WEBHOOK_PO=https://hooks.make.com/your-webhook-url-here

# ----------------------------------------------------------------------------
# Admin Panel Authentication
# ----------------------------------------------------------------------------

# ADMIN_BASIC_USER - Username for /admin/logs endpoint
ADMIN_BASIC_USER=admin

# ADMIN_BASIC_PASS - Password for /admin/logs endpoint
# Use a strong password! Generate with: node -e "console.log(require('crypto').randomBytes(24).toString('base64'))"
ADMIN_BASIC_PASS=change_me_to_strong_password

# ----------------------------------------------------------------------------
# Configuration
# ----------------------------------------------------------------------------

# LOG_RETENTION_DAYS - How many days to keep logs in memory (default: 60)
LOG_RETENTION_DAYS=60

# ALLOW_HOSTS - Comma-separated list of allowed external hosts for webhooks
# This prevents requests to unauthorized services
ALLOW_HOSTS=api.jobtread.com,hooks.make.com,quickbooks.api.intuit.com

# PORT - Server port (default: 3000, Vercel auto-assigns in production)
PORT=3000
