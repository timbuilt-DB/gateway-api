{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["action", "mode", "idempotencyKey", "params"],
  "properties": {
    "action": {
      "type": "string",
      "enum": ["echo", "jobtread.query", "jobtread.pushJobToQbo", "make.trigger"]
    },
    "mode": {
      "type": "string",
      "enum": ["dry_run", "execute"]
    },
    "idempotencyKey": {
      "type": "string"
    },
    "params": {
      "type": "object"
    }
  },
  "additionalProperties": false
}
